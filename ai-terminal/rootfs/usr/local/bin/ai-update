#!/usr/bin/env bash
# =============================================================================
# ai-update - Aktualizace AI CLI nastroju a Python zavislosti
# =============================================================================

set -e

echo "==========================================="
echo "  AKTUALIZACE AI TERMINAL KOMPONENT"
echo "==========================================="
echo ""

# Aktualizace Claude CLI
echo "[1/3] Aktualizuji Claude CLI..."
npm update -g @anthropic-ai/claude-code
echo "      Claude CLI: $(claude --version 2>/dev/null || echo 'OK')"
echo ""

# Aktualizace Gemini CLI
echo "[2/3] Aktualizuji Gemini CLI..."
npm update -g @google/gemini-cli
echo "      Gemini CLI: $(gemini --version 2>/dev/null || echo 'OK')"
echo ""

# Aktualizace Python zavislosti
echo "[3/3] Aktualizuji Python zavislosti..."
source /opt/venv/bin/activate
pip install --upgrade anthropic paho-mqtt PyYAML httpx rich 2>/dev/null
echo ""

echo "==========================================="
echo "  AKTUALIZACE DOKONCENA"
echo "==========================================="
